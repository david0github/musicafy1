<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="12dp"
        card_view:cardUseCompatPadding="true"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground">

            <ImageView
                android:id="@+id/artist_image"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/artist_firstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/artist_image"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/artist_lastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/artist_firstName"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/home_town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/artist_firstName"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/artist_image"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/recordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_town"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/artist_image"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/albums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recordLabel"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/artist_image"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

        </RelativeLayout>

</android.support.v7.widget.CardView>

</LinearLayout>